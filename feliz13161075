
.286
spila SEGMENT stack
      DB 32 DUP ('stack___')
spila ENDS
sdatos SEGMENT
  
  letrero db 'Ingrese un numero: ','$'
  Arreg db 2 dup(0),'$'
  num1 db (0),'$'
  num2 db (0),'$'
  salto DB 13,10,'$'
  espacio db ' ','$'
  letrero3 DB "El numero es feliz ",'$'
  letrero4 DB "El numero no esfeliz ",'$'  
sdatos ENDS
scodigo SEGMENT 'CODE'
       Assume ss:spila, ds:sdatos, cs:scodigo
Princ PROC FAR
      PUSH DS
      PUSH 0
      MOV AX, sdatos
      MOV ds,AX
      mov es,ax
    
      
      mov ah,09h
      lea dx,letrero
      int 21h
   
      mov si,0

      cargar:
      mov ah,01h
      int 21h
      mov Arreg[si],al     
      inc si
      cmp si,2
      jb cargar
      jmp inicio

      
      inicio:
     
     mov si,0
     jmp evalua

     evalua:
     cmp si,6
     je texto
     jmp seguir

     seguir:
     inc si
      mov ah,09h
      lea dx,salto
      int 21h
      
     sub Arreg[0],30h
     mov al,Arreg[0]
     mul al
    
     mov num1,al
     
     sub Arreg[1],30h
     mov al,Arreg[1]
     mul al

    ; mov num2,al
  
    add al,num1
    mov cl,al
    mov Arreg,0
    aam
    mov Arreg[0],ah
    mov Arreg[1],al
    add Arreg[0],30h
    add Arreg[1],30h
 
    ;mov ah,09h
    ;lea dx,Arreg
    ;int 21h
           
      
    cmp cl,1
    je texto
    jmp evalua
    
mov ah,09h
lea dx,salto
int 21h
    
    
texto:
mov ah,09h
lea dx,salto
int 21h
    
cmp cl,1
je feliz 
nofeliz:
mov ah,09h
lea dx,letrero4
int 21h

mov ah,09h
lea dx,salto
int 21h

jmp salir   
feliz:
mov ah,09h
lea dx,letrero3
int 21h

mov ah,09h
lea dx,salto
int 21h

   
      salir:
      ret
Princ ENDP
scodigo ENDS
END Princ
